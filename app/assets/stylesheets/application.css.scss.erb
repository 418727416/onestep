.masthead {
  background: url(<%= asset_path 'hero.jpg' %>) center -10px no-repeat;
}
ul {
  padding-left: 0px;
}

/* sticky footer */
html,body {
  margin:0;
  border:0;
  height:100%;
}
#wrapper {
  min-height:100%;
  height:auto!important;
  height:100%;
  margin:0;
  margin-bottom:-160px;
  #footer-push {
    height:160px;
    clear:both;
  }
}
.footer {
   background-color: #252525;
   min-height: 160px;
   clear:both;
   color: white;
   a {
     color: white;
   }
}
