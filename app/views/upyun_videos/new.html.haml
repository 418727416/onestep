- content_for :template_js do
  = javascript_include_tag 'i_fileupload'
  :javascript
    jQuery(function($) {
      var _tip = $("#upload-tip");
      $('#fileupload').fileupload({
          dataType: 'json',
          autoUpload: true,
          url: '/upyun_videos.json',
          maxFileSize: 1024 * 1024 * 5,
          acceptFileTypes: /(\.|\/)(gif|jpe?g|png)$/i,
          start: function(e) {
            _tip.html('上传中&nbsp;&middot;&middot;&middot;');
          },
          done: function (e, data) {
            alert('upload complete');
          },
          always: function(e) {
            _tip.html("上传");
          },
      });
    });

.container
  %a.fileupload-btn.action_label
    %span#upload-tip 上传
    %input#fileupload{:type => 'file', :multiple => true, :name => "upyun_video[asset][]"}

