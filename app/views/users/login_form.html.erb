<div class="container">
  <h1>Log In</h1>

  <%= form_tag "/submit_login_form" do %>
    <div class="field">
      <%= label_tag :name %><br />
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div><%= submit_tag "Log In", :class => "btn" %></div>
  <% end %>
</div>
