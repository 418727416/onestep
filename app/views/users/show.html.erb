</script>
<div id="user_show" class="container">
  <div id="user_name">
    name: <%= @user.name %>
  </div>
  <div class="avatared">
    <% if current_user == @user %>
      <a href="/account" title="click to change a new avatar">
    <% end %>
      <%= image_tag @user.final_avatar_url,:alt => "Your Image", :size => "210x210"%>
    <% if current_user == @user %>
      <a>
    <% end %>
  </div>
  <div id="user_email">
    Email: <%= @user.email %>
  </div>
  <div id="user_course">
    Courses:
    <% @user.courses.each do |c| %>
      <%= link_to c.name, course_path(c) %>
    <% end %>
  </div>
  <% if current_user == @user %>
    <%= link_to "edit profile", account_path %>
  <% end %>
  <div id="user_comments">
    comments:
    <hr>
    <% for comment in  @user.comments %>
      <%= comment.content %>
      <hr>
    <% end %>
  </div>
</div><!-- user_show -->

