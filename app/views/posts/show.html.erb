<div class="container">
  <div class="box">
    <div class="box-header">
      <h2> <%= @post.title %> </h2>
      <% if current_user && current_user.admin? %>
        <%= link_to t("edit_blog"), edit_post_path(@post), :class => "btn btn-success" %>
      <% end %>
    </div>
    <div class="inner">
      <%= markdown @post.content %>
    </div>
  </div>
</div>
