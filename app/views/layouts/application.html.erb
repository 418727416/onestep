<!DOCTYPE html>
<html>
<head>
  <title>Onestep</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div id="navbar">
      <%= link_to image_tag("jeap-logo.png"), root_url %>
      <% if current_user %>
        <%= link_to current_user.name, user_path(current_user) %> | <%= link_to t("logout"), logout_path %>
      <% else %>
        <%= link_to t("signup"), signup_path %> | <%= link_to t("login"), login_path %>
      <% end %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
