<!DOCTYPE html>
<html>
<head>
  <title>Hpcasts</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= favicon_link_tag %>
  <link href="http://vjs.zencdn.net/c/video-js.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="wrapper">
    <!-- Navbar
    ================================================== -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="">
                <%= link_to t("home"), root_url %>
              </li>
              <li class="">
                <%= link_to t("all_courses"), courses_path %>
              </li>
            </ul>
            <ul class="nav pull-right">
              <% if current_user %>
                <li> <%= link_to current_user.name, user_path(current_user) %> </li> 
                <li> <%= link_to t("logout"), logout_path %></li>
              <% else %>
                <li><%= link_to t("signup"), signup_path %> </li>
                <li><%= link_to t("login"), login_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <%= yield %>

<!-- Footer
    ================================================== -->
      <div id="footer-push"></div><!-- hack for sticky footer -->
    </div><!-- end of wrapper - hack for sticky footer -->
    <footer class="footer">
      <div class="container">
        <ul class="footer-links">
          <li><a href="/blog">Blog</a></li>
          <li class="muted">&middot;</li>
          <li><a href="/about">About</a></li>
          <li class="muted">&middot;</li>
          <li><a href="#">Roadmap</a></li>
        </ul>
      </div>
    </footer>
  <%= javascript_include_tag "application" %>
  <%= yield :template_js %>

</body>
</html>
