<!DOCTYPE html>
<html>
<head>
  <title>Onestep</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div id="navbar">
      <%= image_tag "jeap-logo.png" %>
      <% if current_user %>
        logged in as <%= current_user.email %> | <%= link_to t("logout"), logout_path %>
      <% else %>
        <%= link_to t("signup"), signup_path %> or <%= link_to t("login"), login_path %>
      <% end %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
