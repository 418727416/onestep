<p id="notice"><%= notice %></p>
<script src="http://vjs.zencdn.net/c/video.js"></script>


<% if @video %>
  <%= render "video_player", :video => @video %>

  <div id="videos">
    <h3><%= t("videos") %></h3>
    <%= render :partial => "videos", :collection => @course.videos.reorder('no') %>
  </div>

<% else %>
  Plz upload video
<% end %>

      <div class="videos">
        <div id="video_create_box">
          <%= form_for(Video.new(:course_id => @course.id)) do |f| %>
            <%= f.select :no, ((0..20).map {|i| [i,i] } << ["no", nil]) %>
            <%= f.hidden_field :course_id %>
            <%= f.label t("video_title") %>
            <%= f.text_field :title %>
            <br>
            <%= f.label t("video_link") %>
            <%= f.text_field :link %>
            <br>
            <%= f.submit "#{t('add_this_video')}", :class => "btn btn-success", :id => "comment_btn" %>
          <% end %>
        </div>
      </div>

<div id="comments">
  <h3><%= t("comment") %></h3>
  <%= render :partial => "comments/editable_comment", :collection => @course.comments %>
</div>
  <% if current_user %>
    <div class="comment">
      <div id="comment_box">
        <%= form_for(Comment.new(:course_id => @course.id, :user_id => current_user.id)) do |f| %>
          <%= f.hidden_field :course_id %>
          <%= f.hidden_field :user_id  %>
          <%= f.text_area :content %>
          <%= f.submit "#{t('publish_comment')}", :class => "btn btn-success", :id => "comment_btn" %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div id="login_buttons">
      <%= link_to "login_and_comment", login_path(:return_to => request.url) ,:class => "btn btn-success" %>
    </div>
    <br \>
  <% end %>

