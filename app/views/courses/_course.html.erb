<div class="span4">
  <div class="course-panel">
    <div class="poster-area" style="background-image: url(<%= poster_link course %>);">
      <a data-toggle="modal" href="#<%= course.id %>">
        <%= image_tag 'player_icon.png' %>
      </a>
    </div>
  </div>
  <div class="course-info">
    <h4> <%= course.cat %> :</h4>
    <%= link_to course.title, course %>
  </div>
</div>

<div class="modal" id="<%= course.id %>">
  <button class="close" data-dismiss="modal">Ã—</button>
  <%= render 'shared/mini_player' %>
</div>
<style>
  .modal {
    width: 448px;
  }
</style>

<%= content_for :template_js do %>
  <script>
    $('#<%= course.id %>').hide()
  </script>
<% end %>
