<% content_for :template_js do %>
  <%= javascript_include_tag 'i_fileupload'%>
  <script>
    jQuery(function($) {
      $('#fileupload').fileupload({
          formData: {course_id: <%= course.id %>},
          dataType: 'script',
          url: '/videos.js',
          add: function(e, data){
            types = /(\.|\/)(mov|mp4)$/i;
            file = data.files[0];
            if (types.test(file.type) || types.test(file.name))
            {
              file = data.files[0];
              data.context = $(tmpl("template-upload", file));
              $('.secondary-info').append(data.context);
              data.submit();
            }
            else
            {
              alert("上传失败：" + file.name + " 视频格式错误，请上传mov或mp4文件");
            }
          },
          start: function(e) {
            $('#submit_video_info').attr('value', '视频正在上传');
            $('#submit_video_info').attr('disabled', 'true');
            $('a.fileupload-btn').bind('click', false);
          },
          progress: function(e, data){
            if(data.context) {
              progress = parseInt(data.loaded / data.total * 100, 10);
              data.context.find('#progress-bar').css('width', progress + '%');
              $('#progress-text').html('视频上传中&nbsp;&middot;&middot;&middot;');
            }
          },
          done: function (e, data) {
            $('#progress-text').html("上传成功！");
          },
      });
    });
  </script>
<% end %>

<div class="add-video-box">
  <div class="primary-info">
    <%= form_for(Video.new) do |f| %>
      <dl class="form">
        <dt>
        <%= f.label t("video_title") %>
        </dt>
        <dd>
        <%= f.text_field :title %>
        </dd>
      </dl>
      <dl class="form">
        <dt>
        <%= f.label t("video_desc") %>
        </dt>
        <dd>
        <%= f.text_area :desc, :id => "video_desc", :class => "long short" %>
        </dd>
      </dl>
      <dl class="form">
        <dt>
        <%= f.check_box :free %>
        <%= f.label t('free') %>
        </dt>
      </dl>
      <%= f.submit t('submit_video_info'), :class => "button button-block", :disabled => true, data: {disable_with: t('saving') + "..."}, :id => "submit_video_info" %>
    <% end %>
  </div>
  <div class="secondary-info">
    <a class= "fileupload-btn fileupload-video">
      <i class="fileupload-icon fa fa-plus fa-5x"></i>
      <input id="fileupload" name="video[asset]" type="file">
    </a>
    <p class='upload-tip'>上传视频：格式支持mov和mp4<br>
    视频编码：h.264，声音编码：aac
    </p>
    <script id="template-upload" type="text/x-tmpl">
      <div class="upload">
        <div class="progress">
          <span id="progress-text"></span>
          <div class="bar" id="progress-bar">
          </div>
        </div>
      </div>
    </script>
  </div>
</div>
