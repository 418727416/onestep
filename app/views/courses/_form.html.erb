<% content_for :template_js do %>
  <script>
    $('#course_desc').NobleCount('#desc_count',{
      on_negative: 'go_red',
      on_positive: 'go_green',
      max_chars: 33});
  </script>
<% end %>
<%= form_for(@course, :url => "/course") do |f| %>
  <%= f.hidden_field :user_id %>
  <%= flash[:notice] %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label t('course_name') %>

    <br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('course_title') %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label t('course_description') %>
    (<span id='desc_count'></span> characters remaining)
    <br>
    <%= f.text_area :description, :size => "30x10", :id => "course_desc" %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
