<p id="notice"><%= notice %></p>

<%= link_to t("create_course"), "/create_course", :class => "btn btn-success" %>

<div id="wrapper" class="grid clearfix">
  <ol id="repos">
    <% if !@courses.empty? %>
      <% @courses.each do |course| %>
        <%= render course %>
      <% end %>
    <% else %>
      <p>
      No Courses found
      </p>
    <% end %>
  </ol>
</div>
